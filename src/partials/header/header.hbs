<header class="header">
  <div class="container desktop-menu">
    <div class="header-item">
      <a class="header-logo__link" href="/">
        <img class="header-logo" src="../../assets/img/Logo_fullcolor1.svg" alt="логотип">
        <img class="header-logo header-logo-hover" src="../../assets/img/Logo_fullcolor2.svg" alt="логотип">
      </a>
      {{> "header-nav/header-nav" }}
    </div>
    <div class="header-item">
      {{> "language/language" text="ru"}}
      {{#if auth }}
      {{> "avatar/avatar" imgSrc="../../assets/img/avatar.png"}}
      {{> "money/money" count="9999"}}
      {{> "notifications/notifications" }}
      {{else}}
      {{> "button-singin/button-singin" text="войти" popup="sing-in"}}
      {{/if}}
    </div>
  </div>
  <div class="container mobile-menu">
